{
  "name": "@nextcloud/calendar-js",
  "version": "1.0.0",
  "description": "Small library that wraps ICAL.js and provide more convenient means for editing",
  "main": "src/index.js",
  "scripts": {
    "build-doc": "./node_modules/.bin/esdoc",
    "lint": "eslint --ext .js src",
    "lint:fix": "eslint --ext .js src --fix",
    "test": "TZ=UTC jest",
    "test:coverage": "TZ=UTC jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextcloud/calendar-js.git"
  },
  "keywords": [
    "ical.js",
    "rfc5545",
    "rfc7986"
  ],
  "author": "Christoph Wurst",
  "license": "AGPLv3+",
  "bugs": {
    "url": "https://github.com/nextcloud/calendar-js/issues"
  },
  "homepage": "https://github.com/nextcloud/calendar-js#readme",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.8",
    "@nextcloud/eslint-config": "^6.0.0",
    "@nextcloud/eslint-plugin": "^1.5.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-loader": "^3.0.4",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "^27.0.6"
  },
  "dependencies": {
    "ical.js": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage",
    "clearMocks": true,
    "setupFiles": [
      "./node_modules/ical.js/build/ical.js",
      "./tests/assets/loader.js"
    ]
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  }
}
